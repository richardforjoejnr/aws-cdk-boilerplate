{
  "name": "aws-lambda-stepfunctions-boilerplate",
  "version": "1.0.0",
  "description": "AWS Lambda and Step Functions boilerplate with CDK infrastructure",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "deploy": "npm run build && cd packages/infrastructure && npm run deploy",
    "deploy:dev": "./scripts/deploy-with-cleanup.sh dev",
    "deploy:test": "./scripts/deploy-with-cleanup.sh test",
    "deploy:prod": "./scripts/deploy-with-cleanup.sh prod",
    "deploy:dev:webapp": "./scripts/deploy-with-cleanup.sh dev --webapp",
    "deploy:test:webapp": "./scripts/deploy-with-cleanup.sh test --webapp",
    "deploy:prod:webapp": "./scripts/deploy-with-cleanup.sh prod --webapp",
    "deploy:webapp:dev": "./scripts/deploy-webapp.sh dev",
    "deploy:webapp:test": "./scripts/deploy-webapp.sh test",
    "deploy:webapp:prod": "./scripts/deploy-webapp.sh prod",
    "destroy": "cd packages/infrastructure && npm run destroy",
    "destroy:dev": "STAGE=dev npm run destroy",
    "destroy:test": "STAGE=test npm run destroy",
    "destroy:prod": "STAGE=prod npm run destroy",
    "cleanup:orphaned:dev": "./scripts/cleanup-orphaned-resources.sh dev",
    "cleanup:orphaned:test": "./scripts/cleanup-orphaned-resources.sh test",
    "cleanup:orphaned:prod": "./scripts/cleanup-orphaned-resources.sh prod",
    "cleanup:failed:dev": "./scripts/cleanup-failed-stacks.sh dev",
    "cleanup:failed:test": "./scripts/cleanup-failed-stacks.sh test",
    "cleanup:failed:prod": "./scripts/cleanup-failed-stacks.sh prod",
    "webapp:config:dev": "./scripts/configure-webapp.sh dev",
    "webapp:config:test": "./scripts/configure-webapp.sh test",
    "webapp:config:prod": "./scripts/configure-webapp.sh prod",
    "webapp:dev": "cd packages/web-app && npm run dev",
    "validate:dev": "./scripts/validate-deployment.sh dev",
    "validate:test": "./scripts/validate-deployment.sh test",
    "validate:prod": "./scripts/validate-deployment.sh prod",
    "drift:check:dev": "./scripts/fix-cloudformation-drift.sh dev",
    "drift:check:test": "./scripts/fix-cloudformation-drift.sh test",
    "drift:check:prod": "./scripts/fix-cloudformation-drift.sh prod",
    "drift:fix:dev": "./scripts/fix-drift-and-redeploy.sh dev",
    "drift:fix:test": "./scripts/fix-drift-and-redeploy.sh test",
    "drift:fix:prod": "./scripts/fix-drift-and-redeploy.sh prod",
    "jira:deploy:dev": "./scripts/deploy-jira-dashboard.sh dev",
    "jira:deploy:test": "./scripts/deploy-jira-dashboard.sh test",
    "jira:deploy:prod": "./scripts/deploy-jira-dashboard.sh prod",
    "jira:destroy:dev": "./scripts/destroy-jira-dashboard.sh dev",
    "jira:destroy:test": "./scripts/destroy-jira-dashboard.sh test",
    "jira:destroy:prod": "./scripts/destroy-jira-dashboard.sh prod",
    "prepare": "husky install || true"
  },
  "devDependencies": {
    "@tsconfig/node18": "^18.2.6",
    "@types/node": "^18.19.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=10.0.0"
  }
}
